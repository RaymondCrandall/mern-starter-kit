# editorconfig.org
# An .editorconfig file will be included in all team projects
# so that our code style remains consistent across each project
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
